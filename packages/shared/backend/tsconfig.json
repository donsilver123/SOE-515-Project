{
	"exclude": [
		"node_modules"
	],
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		/* Linting */
		"skipLibCheck": true,
		"strict": true,
		// "noUnusedLocals": true,
		// "noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,
		"baseUrl": "."
	}
}
